<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".ui.activities.PaymentActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface_white"
        android:elevation="0dp"
        app:title="@string/payment"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xl">

            <!-- Bill Summary Card -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.SeaCliff.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bill Summary"
                        android:textAppearance="@style/TextAppearance.SeaCliff.Title"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"/>

                        <TextView
                            android:id="@+id/tvSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"
                            tools:text="TZS 45,000"/>
                    </LinearLayout>

                    <!-- Tax -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_sm">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="VAT (18%)"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"/>

                        <TextView
                            android:id="@+id/tvTax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"
                            tools:text="TZS 8,100"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="@dimen/spacing_sm"/>

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Amount"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Title"/>

                        <TextView
                            android:id="@+id/tvTotalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Title"
                            tools:text="TZS 53,100"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Method Card -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.SeaCliff.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method"
                        android:textAppearance="@style/TextAppearance.SeaCliff.Title"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <RadioGroup
                        android:id="@+id/rgPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbCash"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/touch_target_min"
                            android:text="Cash"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/rbCard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/touch_target_min"
                            android:text="Card"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"/>

                        <RadioButton
                            android:id="@+id/rbMobile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/touch_target_min"
                            android:text="Mobile Money"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"/>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cash Payment Details (visible when cash selected) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCashPayment"
                style="@style/Widget.SeaCliff.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash Payment"
                        android:textAppearance="@style/TextAppearance.SeaCliff.Title"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <!-- Amount Received Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amount Received"
                        android:layout_marginBottom="@dimen/spacing_md"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAmountReceived"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Change Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md"
                        android:background="@color/surface_elevated">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Change"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Title"/>

                        <TextView
                            android:id="@+id/tvChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TZS 0"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Title"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tip Entry Card -->
            <androidx.cardview.widget.CardView
                style="@style/Widget.SeaCliff.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tip (Optional)"
                        android:textAppearance="@style/TextAppearance.SeaCliff.Title"
                        android:layout_marginBottom="@dimen/spacing_md"/>

                    <!-- Quick Tip Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:text="10%"
                            android:textColor="@color/text_primary"
                            app:backgroundTint="@color/surface_white"
                            app:strokeColor="@color/divider"
                            app:strokeWidth="1dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip15"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:text="15%"
                            android:textColor="@color/text_primary"
                            app:backgroundTint="@color/surface_white"
                            app:strokeColor="@color/divider"
                            app:strokeWidth="1dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTip20"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="20%"
                            android:textColor="@color/text_primary"
                            app:backgroundTint="@color/surface_white"
                            app:strokeColor="@color/divider"
                            app:strokeWidth="1dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                    <!-- Custom Tip Amount -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Custom Tip Amount"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTipAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/TextAppearance.SeaCliff.Body"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Confirm Payment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_standard"
                android:text="Confirm Payment"
                android:textAppearance="@style/TextAppearance.SeaCliff.Title"
                android:textColor="@color/icon_tint_white"
                app:backgroundTint="@color/icon_background"
                app:cornerRadius="@dimen/corner_radius_large"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
